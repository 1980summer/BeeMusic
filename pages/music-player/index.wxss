/* pages/music-player/index.wxss */
page {
    color: #fff;
}

.bg-image,
.bg-cover {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    /* 只有设置了定位，才能设置 z-index */
    z-index: -1;
}

.bg-cover {
    background-color: rgba(0, 0, 0, .5);
    /* 毛玻璃效果 */
    backdrop-filter: blur(30px);
}